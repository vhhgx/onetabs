{
  "manifest_version": 3,
  "name": "OneTabs",
  "version": "0.0.4",
  "description": "保存并管理Chrome标签页及分组",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "OneTabs"
  },
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}